<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.CatsFragment"
    android:padding="35dp">

    <!-- TextView for the title -->
    <TextView
        android:id="@+id/catTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/cat_title"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- CircleImageView for displaying the cat photo in a circular form
    Credit: https://github.com/hdodenhof/CircleImageView
    -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/catImageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/baseline_pets_24"
        android:contentDescription="@string/cat_image_context" />

    <!-- TextView for the text of positivity -->
    <TextView
        android:id="@+id/catPositivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/catPositivity"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

</LinearLayout>