<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Custom Back Button -->
    <Button
        android:id="@+id/buttonGoBackToDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="@string/cancel"
        android:backgroundTint="@color/blue"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingBottom="30dp"
            android:paddingTop="15dp">

            <!-- TextView for the title -->
            <TextView
                android:id="@+id/createNewObjectiveTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:text="@string/edit_objective"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Label for the objective title -->
            <TextView
                android:id="@+id/textViewNewObjectiveTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_new_objective_creation"
                android:textSize="18sp" />

            <!-- EditText for the objective title input -->
            <EditText
                android:id="@+id/editTextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:layout_marginBottom="16dp"
                android:hint="@string/enter_your_objective_title"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <!-- Label for the objective description -->
            <TextView
                android:id="@+id/textViewObjectiveDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:text="@string/description_new_objective_creation"
                android:textSize="18sp" />

            <!-- EditText for the objective description input -->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:gravity="top"
                android:layout_marginBottom="16dp"
                android:hint="@string/enter_your_objective_description"
                android:inputType="textMultiLine"
                android:minLines="5"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <!-- Label for the objective Photo -->
            <TextView
                android:id="@+id/textViewNewObjectivePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Photo_new_objective_creation"
                android:textSize="18sp" />

            <!-- LinearLayout to hold the two buttons side by side -->
            <LinearLayout
                style="?android:attr/buttonBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Button to take photo -->
                <Button
                    android:id="@+id/buttonTakePhoto"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/take_photo"
                    android:backgroundTint="@color/blue"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- Button to delete photo -->
                <Button
                    android:id="@+id/buttonDeletePhoto"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/delete_photo"
                    android:backgroundTint="@color/red"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Label for the coordinates -->
            <TextView
                android:id="@+id/textViewNewObjectiveCoordinates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/coordinates_new_objective_creation"
                android:textSize="18sp" />

            <!-- Label for the objective title -->
            <TextView
                android:id="@+id/textViewNewObjectiveLatitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/latitude_new_objective_creation"
                android:textSize="16sp" />

            <!-- EditText for the objective Latitude input -->
            <EditText
                android:id="@+id/editTextLatitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="16dp"
                android:hint="@string/enter_your_Latitude_value"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <!-- Label for the objective Longitude -->
            <TextView
                android:id="@+id/textViewNewObjectiveLongitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/longitude_new_objective_creation"
                android:textSize="16sp" />

            <!-- EditText for the objective longitude input -->
            <EditText
                android:id="@+id/editTextLongitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="16dp"
                android:hint="@string/enter_your_longitude_value"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:textSize="14sp" />


            <!-- Button to save changes -->
            <Button
                android:id="@+id/buttonSaveChanges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save_changes"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/blue"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
